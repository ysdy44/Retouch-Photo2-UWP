<Page
    x:Class="Retouch_Photo2.Tools.Pages.PenPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:elements="using:Retouch_Photo2.Elements"
    xmlns:pagesDrawPages="using:Retouch_Photo2.Pages.DrawPages"
    xmlns:touchbar="using:Retouch_Photo2.Tools.Touchbar"
    xmlns:toolFlyouts="using:Retouch_Photo2.Tools.Flyouts"
    mc:Ignorable="d"
    >

    <Page.Resources>
        <!--Flyout-->
        <Flyout x:Name="Flyout" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled" FlyoutPresenterStyle="{StaticResource AppFlyoutPresenterStyle}">
            <toolFlyouts:PenFlyout x:Name="_penFlyout"/>
        </Flyout>
    </Page.Resources>

    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!--Add or Nodes-->
        <elements:OnOffSwitch OnContent="Add" OffContent="Move" IsOn="{x:Bind SelectionViewModel.IsPenToolNodesMode, Mode=TwoWay}">
            <ToolTipService.ToolTip>
                <ToolTip Content="StepFrequency" Placement="Top" IsOpen="{x:Bind TipViewModel.IsPenToolOpen,Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
            </ToolTipService.ToolTip>
        </elements:OnOffSwitch>

        <!--Add-->
        <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{x:Bind FalseToVisibilityConverter(SelectionViewModel.IsPenToolNodesMode),Mode=OneWay}">

            <AppBarSeparator/>

            <TextBlock Text="FillColor:" Style="{StaticResource AppTextBlock}"/>
            <pagesDrawPages:FillColorEllipseButton/>

            <AppBarSeparator/>

            <TextBlock Text="StrokeColor:" Style="{StaticResource AppTextBlock}"/>
            <pagesDrawPages:StrokeColorEllipseButton/>

            <ContentControl Width="12"/>

            <TextBlock Text="StrokeWidth:" Style="{StaticResource AppTextBlock}"/>
            <pagesDrawPages:StrokeWidthPicker/>

        </StackPanel>

        <!--Nodes-->
        <StackPanel Grid.Column="1" Orientation="Horizontal" Visibility="{x:Bind TrueToVisibilityConverter(SelectionViewModel.IsPenToolNodesMode),Mode=OneWay}">
           
            <AppBarSeparator/>

            <TextBlock Text="Remove:" Style="{StaticResource AppTextBlock}"/>
            <Border Background="Transparent" Style="{StaticResource AppCircleBorderStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Remove the current point" Placement="Top" IsOpen="{x:Bind TipViewModel.IsPenToolOpen,Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <Button x:Name="RemoveButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
                    <FontIcon Glyph="&#xE107;" FontFamily="Segoe MDL2 Assets" Foreground="{ThemeResource AppText}"/>
                </Button>
            </Border>
            
            <ContentControl Width="10"/>

            <TextBlock Text="Insert:" Style="{StaticResource AppTextBlock}"/>
            <Border Background="Transparent" Style="{StaticResource AppCircleBorderStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Insert from current point" Placement="Top" IsOpen="{x:Bind TipViewModel.IsPenToolOpen,Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <Button x:Name="AddButton" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
                    <FontIcon Glyph="&#xE109;" FontFamily="Segoe MDL2 Assets" Foreground="{ThemeResource AppText}"/>
                </Button>
            </Border>

            <AppBarSeparator/>

            <TextBlock Text="Sharp:" Style="{StaticResource AppTextBlock}"/>
            <Border Background="Transparent" Style="{StaticResource AppCircleBorderStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Sharp curves" Placement="Top" IsOpen="{x:Bind TipViewModel.IsPenToolOpen,Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <Button x:Name="SharpButton" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
                    <PathIcon Foreground="{ThemeResource AppText}" Data="M8.948,9.521c-0.282,-0.507 -0.442,-1.088 -0.442,-1.706c0,-1.972 1.632,-3.573 3.642,-3.573c2.01,0 3.642,1.601 3.642,3.573c0,0.699 -0.205,1.352 -0.56,1.903l8.074,8.931c0.266,0.294 0.159,0.778 -0.023,0.928c-0.21,0.172 -0.71,0.312 -1.067,-0.023l-8.137,-8.709c-0.56,0.344 -1.221,0.542 -1.929,0.542c-0.798,0 -1.536,-0.252 -2.136,-0.679l0.02,0.022l-8.246,8.824c-0.357,0.335 -0.857,0.195 -1.067,0.023c-0.182,-0.15 -0.289,-0.634 -0.023,-0.928c1.465,-1.62 8.252,-9.128 8.252,-9.128l0,0Zm3.2,-3.493c1.005,0 1.821,0.801 1.821,1.787c0,0.986 -0.816,1.786 -1.821,1.786c-1.005,0 -1.821,-0.8 -1.821,-1.786c0,-0.986 0.816,-1.787 1.821,-1.787Z"/>
                </Button>
            </Border>

            <ContentControl Width="10"/>

            <TextBlock Text="Smooth:" Style="{StaticResource AppTextBlock}"/>
            <Border Background="Transparent" Style="{StaticResource AppCircleBorderStyle}">
                <ToolTipService.ToolTip>
                    <ToolTip Content="Smooth curves" Placement="Top" IsOpen="{x:Bind TipViewModel.IsPenToolOpen,Mode=OneWay}" Style="{StaticResource AppToolTip}"/>
                </ToolTipService.ToolTip>
                <Button x:Name="SmoothButton" Padding="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" BorderThickness="0" BorderBrush="Transparent" Background="Transparent">
