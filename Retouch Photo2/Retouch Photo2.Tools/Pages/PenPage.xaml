                                <Ellipse Canvas.Left="576" Canvas.Top="246" Width="70" Height="70" Fill="{ThemeResource SystemControlBackgroundBaseHighBrush}"/>
                                <Ellipse Canvas.Left="138" Canvas.Top="249" Width="70" Height="70" Fill="{ThemeResource SystemControlBackgroundBaseHighBrush}"/>

                                <Ellipse Canvas.Left="270" Canvas.Top="209" Width="130" Height="130" StrokeThickness="30" Stroke="{ThemeResource SystemControlBackgroundBaseHighBrush}" Fill="{ThemeResource SystemControlBackgroundAltHighBrush}"/>

                            </Canvas>
                        </Viewbox>
                    </StackPanel>
                </RadioButton>

            </StackPanel>
        </Flyout>
    </tool:ToolPage.Resources>


    <ScrollViewer HorizontalScrollMode="Enabled" HorizontalScrollBarVisibility="Hidden" VerticalScrollMode="Disabled" VerticalScrollBarVisibility="Disabled">
        <StackPanel  Orientation="Horizontal" Height="50" Padding="4">

            <elements:OnOffSwitch x:Name="Switch" OnContent="Add" OffCOfftent="Node"/>

            <AppBarSeparator/>

            <!--Remove-->
            <Border Style="{StaticResource AppCircleBorderStyle}">
                <Button x:Name="RemoveButton" Padding="0" BorderThickness="0" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <FontIcon Glyph="&#xE107;" FontSize="22" FontFamily="{ThemeResource SymbolThemeFontFamily}" />
                </Button>
            </Border>

            <!--Add-->
            <Border Style="{StaticResource AppCircleBorderStyle}">
                <Button x:Name="AddButton" Padding="0" BorderThickness="0" Background="Transparent" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <FontIcon Glyph="&#xE710;" FontSize="22" FontFamily="{ThemeResource SymbolThemeFontFamily}"/>
                </Button>
            </Border>

            <AppBarSeparator/>

