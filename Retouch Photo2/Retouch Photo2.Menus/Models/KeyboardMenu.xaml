                    <Button Grid.Column="3" Content="" FontSize="20" Margin="1,0" Padding="0" BorderThickness="0" Background="{ThemeResource AppFill}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    <Button Grid.Column="4" Content="." FontSize="20" Margin="1,0" Padding="0" BorderThickness="0" Background="{ThemeResource AppFill}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
