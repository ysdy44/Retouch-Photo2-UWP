                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Content="q" FontSize="20" Margin="1,0" Padding="0" BorderThickness="0" Background="{ThemeResource AppFill}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
