<UserControl
    x:Class="Retouch_Photo2.Strokes.ShowControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="70"
    Height="34" 
    d:DesignWidth="100"
    d:DesignHeight="50"
    >

    <Border x:Name="RootGrid" CornerRadius="4" BorderThickness="1" BorderBrush="{ThemeResource AppText}" Background="{ThemeResource AppForeground}">
        <Line x:Name="Line" X1="6" Y1="17" X2="61" Y2="17" StrokeThickness="4" Stroke="{ThemeResource SystemBaseHighColor}" />
    </Border>

</UserControl>