<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ControlTemplate x:Key="BrightnessIcon" TargetType="ContentControl">
        <Ellipse Width="24" Height="24" StrokeThickness="1" Stroke="{ThemeResource AppStroke}">
            <Ellipse.Fill>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Color="Black" Offset="0.5"/>
                    <GradientStop Color="White" Offset="0.6"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
    </ControlTemplate>

</ResourceDictionary>